{
	"name": "@apps/cms-test",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"files": [
		"build"
	],
	"scripts": {
		"dev": "pnpm themeSwitcher:link && vite dev",
		"build": "pnpm themeSwitcher:copy && vite build",
		"preview": "vite preview",
		"test": "vitest run && pnpm run test:integration",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"test:integration-snapshots": "playwright test --update-snapshots",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"sync": "svelte-kit sync",
		"generate": "graphql-codegen",
		"themeSwitcher:copy": "rm -rf static/themeSwitcher && mkdir -p static/themeSwitcher && cp node_modules/@packages/ui/dist/* static/themeSwitcher/",
		"themeSwitcher:link": "rm -rf static/themeSwitcher && ln -sf ../node_modules/@packages/ui/dist static/themeSwitcher"
	},
