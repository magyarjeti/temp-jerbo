{
	"name": "@apps/mehrlicht",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"files": [
		"build"
	],
	"scripts": {
		"dev": "pnpm themeSwitcher:link && pnpm msw:init && vite dev",
		"build": "pnpm themeSwitcher:copy && pnpm msw:clean && vite build",
		"preview": "vite preview",
		"test": "vitest run && pnpm run test:integration",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"test:integration-snapshots": "playwright test --update-snapshots",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"msw:init": "ln -sf ../node_modules/@packages/api/src/lib/mock/__generated__/mockServiceWorker.js static/mockServiceWorker.js",
		"msw:clean": "rm -rf static/mockServiceWorker.js",
		"themeSwitcher:copy": "rm -rf static/themeSwitcher && mkdir -p static/themeSwitcher && cp node_modules/@packages/ui/dist/* static/themeSwitcher/",
		"themeSwitcher:link": "rm -rf static/themeSwitcher && ln -sf ../node_modules/@packages/ui/dist static/themeSwitcher"
	},
	"dependencies": {
		"@packages/api": "workspace:*",
		"@packages/ui": "workspace:*",
		"@sinclair/typebox": "^0.32.35",
		"@urql/svelte": "^4.1.0",
		"js-cookie": "^3.0.5",
		"sveltekit-superforms": "^2.15.2"
	},
	"devDependencies": {
		"@packages/ads": "workspace:*",
		"@packages/auth": "workspace:*",
		"@packages/eslint-config": "workspace:*",
		"@packages/page-meta": "workspace:*",
		"@packages/typebox-utils": "workspace:*",
		"@playwright/test": "^1.42.1",
		"@sveltejs/adapter-auto": "^3.1.1",
		"@sveltejs/adapter-node": "^5.0.1",
		"@sveltejs/kit": "^2.5.2",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/svelte": "^4.1.0",
		"@types/js-cookie": "^3.0.6",
		"@types/qs": "^6.9.13",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"autoprefixer": "^10.4.18",
		"eslint": "^8.57.1",
		"postcss": "^8.4.35",
		"postcss-calc": "^10.0.1",
		"postcss-import": "^16.1.0",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.2",
		"prettier-plugin-tailwindcss": "^0.5.13",
		"svelte": "^5.1.9",
		"svelte-check": "^3.6.6",
		"tailwindcss": "^3.4.4",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.1.4",
		"vitest": "^1.3.1"
	}
}
